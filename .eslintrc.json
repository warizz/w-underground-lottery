{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "standard",
    "standard-jsx",
    "standard-react"
  ],
  "plugins": ["jsx-a11y"],
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "max-len": [1, 80],
    "react/jsx-sort-props": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "sort-keys": 1,
    "space-before-function-paren": [
      2,
      { "anonymous": "always", "named": "never", "asyncArrow": "always" }
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "jest": true
  }
}
